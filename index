        <div id="successMessage" class="success-message">
            <span class="icon">✅</span>
            <div>
                تم إرسال طلبك بنجاح! ستتوصل بإشعار عند إنشاء حسابك
                <br><br>
                يمكنك تعديل المعطيات وإدراج الصور ومختلف المعلومات الأخرى بعد إنشاء الحساب
                <br><br>
                شكراً لك 🙏
            </div>
        </div>
    </div>

    <script>
        document.getElementById('registrationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // جمع البيانات من النموذج
            const name = document.getElementById('name').value;
            const profession = document.getElementById('profession').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;
            
            // تكوين رسالة البريد الإلكتروني
            const subject = 'طلب تسجيل جديد';
            const message = `السلام عليكم ورحمة الله وبركاته

تم استلام طلب تسجيل جديد بالتفاصيل التالية:

الاسم: ${name}
المهنة: ${profession}
رقم الهاتف: ${phone}
العنوان: ${address}

تاريخ الإرسال: ${new Date().toLocaleDateString('ar-SA')}
وقت الإرسال: ${new Date().toLocaleTimeString('ar-SA')}

مع تحياتي`;

            // إرسال البريد باستخدام EmailJS أو FormSubmit
            sendEmail(name, profession, phone, address, message);
            
            // إظهار رسالة النجاح
            document.getElementById('successMessage').style.display = 'block';
            
            // إعادة تعيين النموذج
            this.reset();
            
            // إخفاء رسالة النجاح بعد 8 ثوان
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
            }, 8000);
        });

        function sendEmail(name, profession, phone, address, message) {
            // إنشاء نموذج مخفي للإرسال
            const form = document.createElement('form');
            form.action = 'https://formsubmit.co/asayss.2024@gmail.com';
            form.method = 'POST';
            form.style.display = 'none';
            
            // إضافة الحقول
            const fields = [
                { name: '_subject', value: 'طلب تسجيل جديد' },
                { name: '_captcha', value: 'false' },
                { name: '_template', value: 'table' },
                { name: 'الاسم', value: name },
                { name: 'المهنة', value: profession },
                { name: 'رقم_الهاتف', value: phone },
                { name: 'العنوان', value: address },
                { name: 'التاريخ', value: new Date().toLocaleDateString('ar-SA') },
                { name: 'الوقت', value: new Date().toLocaleTimeString('ar-SA') }
            ];
            
            fields.forEach(field => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = field.name;
                input.value = field.value;
                form.appendChild(input);
            });
            
            document.body.appendChild(form);
            form.submit();
        }

        // إضافة تأثيرات تفاعلية للحقول
        const inputs = document.querySelectorAll('input, textarea');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        });
    </script>
